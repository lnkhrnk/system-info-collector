<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Configuration 1.3//EN" "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
    <property name="charset" value="UTF-8"/>
    <property name="severity" value="error"/>
    <property name="fileExtensions" value="java, properties, xml"/>

    <!-- Модуль TreeWalker проверяет содержимое Java файлов -->
    <module name="TreeWalker">
        <!-- Проверка отсутствия @deprecated аннотаций без javadoc тега и наоборот -->
        <module name="DeprecatedAnnotation"/>

        <!-- Ограничение длины строки -->
        <module name="LineLength">
            <property name="max" value="120"/>
        </module>

        <!-- Запрет импортов через * -->
        <module name="AvoidStarImport"/>

        <!-- Запрет неиспользуемых импортов -->
        <module name="UnusedImports"/>
    </module>
</module>